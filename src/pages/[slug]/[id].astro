---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import SoundButton from '../../components/SoundButton.astro';
import { fetchCategoryById, fetchSounds, fetchCategories } from '../../lib/api';

export async function getStaticPaths() {
  const categories = await fetchCategories();
  
  const paths = [];
  
  // Helper function to create URL-friendly slugs
  function slugify(text: string): string {
    return text
      .toLowerCase()
      .trim()
      .replace(/[^\w\s-]/g, '') // Remove special characters
      .replace(/[\s_-]+/g, '-') // Replace spaces and underscores with hyphens
      .replace(/^-+|-+$/g, ''); // Remove leading/trailing hyphens
  }
  
  // Generate paths for all categories and their children
  function processCategory(category: any) {
    const slug = slugify(category.name);
    paths.push({
      params: { slug, id: category.id.toString() }
    });
    
    // Process children recursively
    if (category.children && category.children.length > 0) {
      category.children.forEach((child: any) => {
        processCategory(child);
      });
    }
  }
  
  categories.forEach(processCategory);
  
  return paths;
}

const { slug, id } = Astro.params;

if (!slug || !id) {
  return Astro.redirect('/404');
}

const categoryId = parseInt(id);

// Fetch category and sounds
const category = await fetchCategoryById(categoryId);
const soundsData = await fetchSounds({ category: categoryId, page_size: 100 });

// SEO Meta Data
const categoryName = category?.name || 'Category';
const pageTitle = `${categoryName} Soundboard: Sound Buttons Unblocked`;
const pageDescription = `Explore our ${categoryName} soundboard with trending sound buttons and meme soundboard. Download, play, and share ${categoryName} sound effects for pranks, fun & entertainment!`;
const pageKeywords = `${categoryName.toLowerCase()}, soundboard, sound buttons unblocked, ${categoryName.toLowerCase()} sound effects, meme soundboard, prank sounds`;
const canonicalUrl = `https://myinstants.app/${slug}/${id}`;
const ogImage = 'https://myinstants.app/images/og-image.jpg';
const h1Title = `${categoryName} Soundboard`;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content="Myinstants" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Myinstants" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Additional SEO Tags -->
    <meta name="theme-color" content="#1a1a1a" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": `${categoryName} Sound Buttons`,
      "description": pageDescription,
      "url": canonicalUrl,
      "mainEntity": {
        "@type": "ItemList",
        "numberOfItems": soundsData.results.length,
        "itemListElement": soundsData.results.slice(0, 10).map((sound, index) => ({
          "@type": "ListItem",
          "position": index + 1,
          "item": {
            "@type": "AudioObject",
            "name": sound.name,
            "contentUrl": sound.sound_file,
            "description": `${categoryName} sound button: ${sound.name}`
          }
        }))
      }
    })} />
    
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header />
    
    <main class="main-content">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol class="breadcrumb-list">
          <li class="breadcrumb-item">
            <a href="/">Home</a>
          </li>
          <li class="breadcrumb-item breadcrumb-active" aria-current="page">
            {categoryName}
          </li>
        </ol>
      </nav>

      {category ? (
        <>
          <!-- Hero Section -->
          <div class="hero-section">
            <h1 class="main-title">{h1Title}</h1>
            <p class="main-description">
              {pageDescription}
            </p>
          </div>

          <!-- Category Sounds Section -->
          <section class="sounds-section">
            <div class="section-header">
              <div class="section-title-wrapper">
                <h2 class="section-title">Sound Buttons : {categoryName}</h2>
              </div>
            </div>
            <div class="sounds-grid" id="soundsGrid" data-total-sounds={soundsData.results.length}>
              {soundsData.results.length > 0 ? (
                soundsData.results.map((sound, index) => (
                  <div class="sound-item" data-sound-index={index}>
                    <SoundButton sound={sound} />
                  </div>
                ))
              ) : (
                <p class="no-sounds">No sounds available in this category at the moment.</p>
              )}
            </div>
            {soundsData.results.length > 20 && (
              <div class="load-more-container">
                <button class="load-more-button" id="loadMoreBtn">
                  Load More {categoryName} Sounds
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </button>
              </div>
            )}
          </section>
        </>
      ) : (
        <div class="error-section">
          <h1>Category Not Found</h1>
          <p>The category you're looking for doesn't exist or has been removed.</p>
          <a href="/" class="cta-button">Go to Home</a>
        </div>
      )}
    </main>

    <Footer />
  </body>
</html>

<script>
  // Pagination functionality
  (function() {
    const soundsGrid = document.getElementById('soundsGrid');
    const loadMoreBtn = document.getElementById('loadMoreBtn');
    
    if (!soundsGrid || !loadMoreBtn) return;
    
    const totalSounds = parseInt(soundsGrid.getAttribute('data-total-sounds') || '0');
    const soundsPerLineDesktop = 11;
    const soundsPerLineMobile = 4;
    const initialLines = 5;
    const loadMoreLines = 4;
    
    let currentlyVisible = 0;
    
    // Calculate initial visible count based on screen size
    function getSoundsPerLine() {
      return window.innerWidth > 768 ? soundsPerLineDesktop : soundsPerLineMobile;
    }
    
    function getInitialVisible() {
      return initialLines * getSoundsPerLine();
    }
    
    function getLoadMoreCount() {
      return loadMoreLines * getSoundsPerLine();
    }
    
    function updateVisibleSounds() {
      const soundsPerLine = getSoundsPerLine();
      const initialVisible = getInitialVisible();
      const loadMoreCount = getLoadMoreCount();
      
      // Set initial visible count
      if (currentlyVisible === 0) {
        currentlyVisible = initialVisible;
      }
      
      const soundItems = soundsGrid.querySelectorAll('.sound-item');
      let visibleCount = 0;
      
      soundItems.forEach((item, index) => {
        if (index < currentlyVisible) {
          item.style.display = '';
          visibleCount++;
        } else {
          item.style.display = 'none';
        }
      });
      
      // Show/hide load more button
      if (currentlyVisible >= totalSounds) {
        loadMoreBtn.style.display = 'none';
      } else {
        loadMoreBtn.style.display = 'block';
      }
    }
    
    loadMoreBtn.addEventListener('click', () => {
      const loadMoreCount = getLoadMoreCount();
      currentlyVisible = Math.min(currentlyVisible + loadMoreCount, totalSounds);
      updateVisibleSounds();
      
      // Scroll to newly loaded content
      const soundItems = soundsGrid.querySelectorAll('.sound-item');
      if (soundItems[currentlyVisible - loadMoreCount]) {
        soundItems[currentlyVisible - loadMoreCount].scrollIntoView({ 
          behavior: 'smooth', 
          block: 'start' 
        });
      }
    });
    
    // Handle window resize
    let resizeTimeout: number;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = window.setTimeout(() => {
        const newInitial = getInitialVisible();
        if (currentlyVisible < newInitial) {
          currentlyVisible = newInitial;
        }
        updateVisibleSounds();
      }, 250);
    });
    
    // Initialize
    updateVisibleSounds();
  })();
</script>

