---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SoundButton from '../components/SoundButton.astro';
import { fetchNewSounds, fetchTrendingSounds } from '../lib/api';

// Fetch sounds data - 44 for desktop (11x4), 16 for mobile (4x4)
const newSounds = await fetchNewSounds(44);
const trendingSounds = await fetchTrendingSounds(44);

// SEO Meta Data
const pageTitle = 'Myinstants: Sound Buttons with Meme Soundboard Unblocked';
const pageDescription = 'Myinstants is the ultimate collection of sound buttons, unblocked meme soundboard, prank sounds, with thousands of sound effects and meme buttons.';
const pageKeywords = 'sound buttons, meme soundboard, unblocked soundboard, prank sounds, sound effects, meme buttons, soundboard unblocked';
const canonicalUrl = 'https://myinstants.app/';
const ogImage = 'https://myinstants.app/images/og-image.jpg';
const h1Title = 'Myinstants: 10,000+ Sound Buttons & Meme Soundboard Unblocked';
const shortDescription = 'Myinstants is your ultimate destination for unblocked meme soundboard, sound buttons, prank, sound effects, and thousands of viral sounds you can play, create and share instantly.';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content="Myinstants" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Myinstants" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Additional SEO Tags -->
    <meta name="theme-color" content="#1a1a1a" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Myinstants",
      "description": shortDescription,
      "url": canonicalUrl,
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://myinstants.app/search?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Myinstants",
        "logo": {
          "@type": "ImageObject",
          "url": "https://myinstants.app/images/logo.png"
        }
      }
    })} />
    
    <!-- Favicon Links -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header />
    
    <main class="main-content">
      <!-- New Sounds Section -->
      <section class="sounds-section">
        <div class="section-header">
          <div class="section-title-wrapper">
            <h2 class="section-title">Sound Buttons : New</h2>
          </div>
          <a href="/new" class="see-all-button">
            See All
            <span class="see-all-icon">
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </a>
        </div>
        <hr class="section-divider" />
        <div class="sounds-grid">
          {newSounds.length > 0 ? (
            newSounds.map((sound) => (
              <SoundButton sound={sound} />
            ))
          ) : (
            <p class="no-sounds">No new sounds available at the moment.</p>
          )}
        </div>
        <div class="explore-more-container">
          <a href="/new" class="explore-more-button">
            Explore More New Sounds
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="5 3 19 12 5 21 5 3"/>
            </svg>
          </a>
        </div>
      </section>

      <!-- Trending Sounds Section -->
      <section class="sounds-section">
        <div class="section-header">
          <div class="section-title-wrapper">
            <h2 class="section-title">Sound Buttons : Trending</h2>
          </div>
          <a href="/trending" class="see-all-button">
            See All
            <span class="see-all-icon">
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </a>
        </div>
        <hr class="section-divider" />
        <div class="sounds-grid">
          {trendingSounds.length > 0 ? (
            trendingSounds.map((sound) => (
              <SoundButton sound={sound} />
            ))
          ) : (
            <p class="no-sounds">No trending sounds available at the moment.</p>
          )}
        </div>
        <div class="explore-more-container">
          <a href="/trending" class="explore-more-button">
            Explore More Trending Sounds
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="5 3 19 12 5 21 5 3"/>
            </svg>
          </a>
        </div>
      </section>

      <!-- Additional Content Section -->
      <section class="additional-content-section">
        <div class="content-grid">
          <div class="content-card">
            <h3>Popular Categories</h3>
            <div class="category-list">
              <a href="/category/memes" class="category-link">Memes</a>
              <a href="/category/funny" class="category-link">Funny</a>
              <a href="/category/music" class="category-link">Music</a>
              <a href="/category/gaming" class="category-link">Gaming</a>
              <a href="/category/movies" class="category-link">Movies</a>
              <a href="/category/tv-shows" class="category-link">TV Shows</a>
            </div>
          </div>
          <div class="content-card">
            <h3>Why Choose Us?</h3>
            <ul class="features-list">
              <li>100,000+ High Quality Sounds</li>
              <li>Free to Use & Download</li>
              <li>Regular Updates</li>
              <li>Easy Soundboard Creation</li>
              <li>Works on All Devices</li>
            </ul>
          </div>
          <div class="content-card">
            <h3>Get Started</h3>
            <p>Create your own custom soundboard in minutes! Browse our extensive library of sounds and start building your collection today.</p>
            <a href="/create" class="cta-button">Create Soundboard</a>
          </div>
        </div>
      </section>

      <!-- Main Title and Description -->
      <div class="hero-section">
        <h1 class="main-title">Myinstants Sound Buttons : 100,000+ Sounds!</h1>
        <p class="main-description">
          Explore trending sound buttons, memes, and sound effects for free! Create custom soundboards easily on any device. Stay up-to-date and elevate your fun with personalized sounds!
        </p>
      </div>
    </main>

    <Footer />

  </body>
</html>

