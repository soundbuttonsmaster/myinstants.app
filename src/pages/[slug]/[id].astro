---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import SoundButton from '../../components/SoundButton.astro';
import { fetchCategoryById, fetchSounds, fetchCategories } from '../../lib/api';

export async function getStaticPaths() {
  const categories = await fetchCategories();
  
  const paths = [];
  
  // Helper function to create URL-friendly slugs
  function slugify(text: string): string {
    return text
      .toLowerCase()
      .trim()
      .replace(/[^\w\s-]/g, '') // Remove special characters
      .replace(/[\s_-]+/g, '-') // Replace spaces and underscores with hyphens
      .replace(/^-+|-+$/g, ''); // Remove leading/trailing hyphens
  }
  
  // Generate paths for all categories and their children
  function processCategory(category: any) {
    const slug = slugify(category.name);
    paths.push({
      params: { slug, id: category.id.toString() }
    });
    
    // Process children recursively
    if (category.children && category.children.length > 0) {
      category.children.forEach((child: any) => {
        processCategory(child);
      });
    }
  }
  
  categories.forEach(processCategory);
  
  return paths;
}

const { slug, id } = Astro.params;

if (!slug || !id) {
  return Astro.redirect('/404');
}

const categoryId = parseInt(id);

// Fetch category and initial sounds
const category = await fetchCategoryById(categoryId);
const initialSoundsData = await fetchSounds({ category: categoryId, page_size: 55 });

// SEO Meta Data
const categoryName = category?.name || 'Category';
const pageTitle = `${categoryName} Soundboard: Sound Buttons Unblocked`;
const pageDescription = `Explore our ${categoryName} soundboard with trending sound buttons and meme soundboard. Download, play, and share ${categoryName} sound effects for pranks, fun & entertainment!`;
const pageKeywords = `${categoryName.toLowerCase()}, soundboard, sound buttons unblocked, ${categoryName.toLowerCase()} sound effects, meme soundboard, prank sounds`;
const canonicalUrl = `https://myinstants.app/${slug}/${id}`;
const ogImage = 'https://myinstants.app/images/og-image.jpg';
const h1Title = `${categoryName} Soundboard`;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content="Myinstants" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Myinstants" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Additional SEO Tags -->
    <meta name="theme-color" content="#1a1a1a" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": `${categoryName} Sound Buttons`,
      "description": pageDescription,
      "url": canonicalUrl,
      "mainEntity": {
        "@type": "ItemList",
        "numberOfItems": initialSoundsData.results.length,
        "itemListElement": initialSoundsData.results.slice(0, 10).map((sound, index) => ({
          "@type": "ListItem",
          "position": index + 1,
          "item": {
            "@type": "AudioObject",
            "name": sound.name,
            "contentUrl": sound.sound_file,
            "description": `${categoryName} sound button: ${sound.name}`
          }
        }))
      }
    })} />
    
    <!-- Favicon Links -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header />
    
    <main class="main-content">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol class="breadcrumb-list">
          <li class="breadcrumb-item">
            <a href="/">Home</a>
          </li>
          <li class="breadcrumb-item breadcrumb-active" aria-current="page">
            {categoryName}
          </li>
        </ol>
      </nav>

      {category ? (
        <>
          <!-- Hero Section -->
          <div class="hero-section">
            <h1 class="main-title">{h1Title}</h1>
            <p class="main-description">
              {pageDescription}
            </p>
          </div>

          <!-- Category Sounds Section -->
          <section class="sounds-section">
            <div class="section-header">
              <div class="section-title-wrapper">
                <h2 class="section-title">Sound Buttons : {categoryName}</h2>
              </div>
            </div>
            <div class="sounds-grid" id="soundsGrid">
              {initialSoundsData.results.length > 0 ? (
                initialSoundsData.results.map((sound, index) => (
                  <div class="sound-item" data-sound-index={index}>
                    <SoundButton sound={sound} />
                  </div>
                ))
              ) : (
                <p class="no-sounds">No sounds available in this category at the moment.</p>
              )}
            </div>
            <div class="load-more-container">
              <button class="load-more-button" id="loadMoreBtn">
                Load More {categoryName} Sounds
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </button>
            </div>
          </section>
        </>
      ) : (
        <div class="error-section">
          <h1>Category Not Found</h1>
          <p>The category you're looking for doesn't exist or has been removed.</p>
          <a href="/" class="cta-button">Go to Home</a>
        </div>
      )}
    </main>

    <Footer />
  </body>
</html>

<script define:vars={{ apiBaseUrl: 'http://play.soundboard.cloud/api/myinstants.app', categoryId: categoryId }}>
  // Load More functionality with API pagination
  (function() {
    const soundsGrid = document.getElementById('soundsGrid');
    const loadMoreBtn = document.getElementById('loadMoreBtn');
    
    if (!soundsGrid || !loadMoreBtn) return;
    
    let currentPage = 1;
    let isLoading = false;
    const soundsPerPage = window.innerWidth > 768 ? 44 : 16; // 4 lines
    
    async function loadMoreSounds() {
      if (isLoading) return;
      
      isLoading = true;
      loadMoreBtn.disabled = true;
      const originalText = loadMoreBtn.innerHTML;
      loadMoreBtn.innerHTML = 'Loading...';
      
      try {
        currentPage++;
        const response = await fetch(`${apiBaseUrl}/sounds?category=${categoryId}&page=${currentPage}&page_size=${soundsPerPage}`);
        const data = await response.json();
        
        if (data && data.data && data.data.results && data.data.results.length > 0) {
          const sounds = data.data.results;
          const currentItemCount = soundsGrid.querySelectorAll('.sound-item').length;
          
          // Helper function to create slug
          function slugify(text) {
            return text.toLowerCase().trim().replace(/[^\w\s-]/g, '').replace(/[\s_-]+/g, '-').replace(/^-+|-+$/g, '');
          }
          
          // Helper function to generate color
          function generateColor(id) {
            const colors = ['#CD6839', '#A464C4', '#7B4FA0', '#9370DB', '#7CCD7C', '#D2691E', '#CD853F', '#66CDAA', '#5DADE2', '#8B7355', '#90EE90', '#FF6347', '#9B59B6', '#5DADE2', '#52C77D', '#F39C12', '#E67E22', '#1ABC9C', '#95A5A6', '#7F8C8D', '#E74C3C', '#8E44AD', '#16A085', '#27AE60', '#D35400', '#34495E', '#C0392B', '#6C3483', '#2874A6', '#138D75'];
            return colors[id % colors.length];
          }
          
          // Add new sounds to grid
          sounds.forEach((sound) => {
            const buttonColor = generateColor(sound.id);
            const soundSlug = slugify(sound.name);
            const audioUrl = `${apiBaseUrl}/sounds/${sound.id}/audio`;
            
            const soundItem = document.createElement('div');
            soundItem.className = 'sound-item';
            soundItem.setAttribute('data-sound-index', (currentItemCount + sounds.indexOf(sound)).toString());
            soundItem.innerHTML = `
              <div class="instant">
                <div 
                  class="sprite-wrapper"
                  role="button"
                  aria-label="Play ${sound.name}"
                  data-sound-id="${sound.id}"
                  data-audio-url="${audioUrl}"
                  id="sound-${sound.id}"
                >
                  <div 
                    class="inner-btn" 
                    style="background: ${buttonColor};"
                  ></div>
                  <div class="button-ring"></div>
                </div>
                <a href="/instant/${soundSlug}-${sound.id}" class="instant-link link-secondary">${sound.name}</a>
                <div class="result-page-instant-sharebox">
                  <button type="button" class="instant-action-button favorite-btn" data-sound-id="${sound.id}" title="Add ${sound.name} to favorites">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="${sound.is_favorited ? 'currentColor' : 'none'}" stroke="currentColor" stroke-width="2" style="font-size: 1.3rem; color: red;">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                    </svg>
                  </button>
                  <button type="button" class="instant-action-button webshare" data-sound-id="${sound.id}" title="Share ${sound.name}">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="font-size: 1.3rem; color: cornflowerblue;">
                      <circle cx="18" cy="5" r="3"/>
                      <circle cx="6" cy="12" r="3"/>
                      <circle cx="18" cy="19" r="3"/>
                      <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/>
                      <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/>
                    </svg>
                  </button>
                  <a href="${audioUrl}" download="${sound.name}.mp3" class="instant-action-button download-btn" title="Download ${sound.name}">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="font-size: 1.3rem; color: #2ECC71;">
                      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                      <polyline points="7 10 12 15 17 10"/>
                      <line x1="12" y1="15" x2="12" y2="3"/>
                    </svg>
                  </a>
                </div>
              </div>
            `;
            soundsGrid.appendChild(soundItem);
          });
          
          // Check if there are more pages
          if (!data.data.next) {
            loadMoreBtn.style.display = 'none';
          }
          
          // Scroll to first new item
          const newItems = soundsGrid.querySelectorAll('.sound-item');
          if (newItems[currentItemCount]) {
            newItems[currentItemCount].scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        } else {
          // No more sounds
          loadMoreBtn.style.display = 'none';
        }
      } catch (error) {
        console.error('Error loading more sounds:', error);
        loadMoreBtn.innerHTML = originalText;
      } finally {
        isLoading = false;
        loadMoreBtn.disabled = false;
        if (loadMoreBtn.style.display !== 'none') {
          loadMoreBtn.innerHTML = originalText;
        }
      }
    }
    
    loadMoreBtn.addEventListener('click', loadMoreSounds);
  })();
</script>

<style>
  /* Breadcrumbs */
  .breadcrumbs {
    margin-bottom: 1.5rem;
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.9rem;
  }

