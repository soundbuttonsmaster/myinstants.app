---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SoundButton from '../components/SoundButton.astro';
import { fetchTrendingSounds } from '../lib/api';

// Fetch initial trending sounds data (first page - 55 for desktop display)
const initialTrendingSounds = await fetchTrendingSounds(55);

// SEO Meta Data
const pageTitle = 'Trending Sound Buttons: Most Popular Meme Soundboard';
const pageDescription = 'Discover the most popular trending sound buttons, viral meme soundboard and sound effects on Myinstants! Play, download and share sound effects for memes, gaming, entertainment!';
const pageKeywords = 'trending sound buttons, popular meme soundboard, viral sound effects, meme soundboard, trending sounds, popular soundboard';
const canonicalUrl = 'https://myinstants.app/trending';
const ogImage = 'https://myinstants.app/images/og-image.jpg';
const h1Title = 'Trending Sound Buttons';
const shortDescription = 'Discover the most popular and trending sound buttons right now';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content="Myinstants" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Myinstants" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Additional SEO Tags -->
    <meta name="theme-color" content="#1a1a1a" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "Trending Sound Buttons",
      "description": pageDescription,
      "url": canonicalUrl,
      "mainEntity": {
        "@type": "ItemList",
        "numberOfItems": initialTrendingSounds.length,
        "itemListElement": initialTrendingSounds.slice(0, 10).map((sound, index) => ({
          "@type": "ListItem",
          "position": index + 1,
          "item": {
            "@type": "AudioObject",
            "name": sound.name,
            "contentUrl": sound.sound_file,
            "description": `Trending sound button: ${sound.name}`
          }
        }))
      }
    })} />
    
    <!-- Favicon Links -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header />
    
    <main class="main-content">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol class="breadcrumb-list">
          <li class="breadcrumb-item">
            <a href="/">Home</a>
          </li>
          <li class="breadcrumb-item breadcrumb-active" aria-current="page">
            Trending Sounds
          </li>
        </ol>
      </nav>

      <!-- Hero Section -->
      <div class="hero-section">
        <h1 class="main-title">{h1Title}</h1>
        <p class="main-description">
          {shortDescription}
        </p>
      </div>

      <!-- Trending Sounds Section -->
      <section class="sounds-section">
        <div class="section-header">
          <div class="section-title-wrapper">
            <h2 class="section-title">Sound Buttons : Trending</h2>
          </div>
        </div>
            <div class="sounds-grid" id="soundsGrid">
          {initialTrendingSounds.length > 0 ? (
            initialTrendingSounds.map((sound, index) => (
              <div class="sound-item" data-sound-index={index}>
                <SoundButton sound={sound} />
              </div>
            ))
          ) : (
            <p class="no-sounds">No trending sounds available at the moment.</p>
          )}
        </div>
        <div class="load-more-container">
          <button class="load-more-button" id="loadMoreBtn">
            Load More Sounds
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>

<script define:vars={{ apiBaseUrl: 'http://play.soundboard.cloud/api/myinstants.app' }}>
  // Load More functionality with API pagination
  (function() {
    const soundsGrid = document.getElementById('soundsGrid');
    const loadMoreBtn = document.getElementById('loadMoreBtn');
    
    if (!soundsGrid || !loadMoreBtn) return;
    
    let currentPage = 1;
    let isLoading = false;
    const soundsPerPage = window.innerWidth > 768 ? 44 : 16; // 4 lines
    
    async function loadMoreSounds() {
      if (isLoading) return;
      
      isLoading = true;
      loadMoreBtn.disabled = true;
      const originalText = loadMoreBtn.innerHTML;
      loadMoreBtn.innerHTML = 'Loading...';
      
      try {
        currentPage++;
        const response = await fetch(`${apiBaseUrl}/sounds/trending?page=${currentPage}&page_size=${soundsPerPage}`);
        const data = await response.json();
        
        if (data && data.data && data.data.results && data.data.results.length > 0) {
          const sounds = data.data.results;
          const currentItemCount = soundsGrid.querySelectorAll('.sound-item').length;
          
          // Helper function to create slug
          function slugify(text) {
            return text.toLowerCase().trim().replace(/[^\w\s-]/g, '').replace(/[\s_-]+/g, '-').replace(/^-+|-+$/g, '');
          }
          
          // Helper function to generate color
          function generateColor(id) {
            const colors = ['#CD6839', '#A464C4', '#7B4FA0', '#9370DB', '#7CCD7C', '#D2691E', '#CD853F', '#66CDAA', '#5DADE2', '#8B7355', '#90EE90', '#FF6347', '#9B59B6', '#5DADE2', '#52C77D', '#F39C12', '#E67E22', '#1ABC9C', '#95A5A6', '#7F8C8D', '#E74C3C', '#8E44AD', '#16A085', '#27AE60', '#D35400', '#34495E', '#C0392B', '#6C3483', '#2874A6', '#138D75'];
            return colors[id % colors.length];
          }
          
          // Add new sounds to grid
          sounds.forEach((sound) => {
            const buttonColor = generateColor(sound.id);
            const soundSlug = slugify(sound.name);
            const audioUrl = `${apiBaseUrl}/sounds/${sound.id}/audio`;
            
            const soundItem = document.createElement('div');
            soundItem.className = 'sound-item';
            soundItem.setAttribute('data-sound-index', (currentItemCount + sounds.indexOf(sound)).toString());
            soundItem.innerHTML = `
              <div class="instant">
                <div 
                  class="sprite-wrapper"
                  role="button"
                  aria-label="Play ${sound.name}"
                  data-sound-id="${sound.id}"
                  data-audio-url="${audioUrl}"
                  id="sound-${sound.id}"
                >
                  <div 
                    class="inner-btn" 
                    style="background: ${buttonColor};"
                  ></div>
                  <div class="button-ring"></div>
                </div>
                <a href="/instant/${soundSlug}-${sound.id}" class="instant-link link-secondary">${sound.name}</a>
                <div class="result-page-instant-sharebox">
                  <button type="button" class="instant-action-button favorite-btn" data-sound-id="${sound.id}" title="Add ${sound.name} to favorites">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="${sound.is_favorited ? 'currentColor' : 'none'}" stroke="currentColor" stroke-width="2" style="font-size: 1.3rem; color: red;">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                    </svg>
                  </button>
                  <button type="button" class="instant-action-button webshare" data-sound-id="${sound.id}" title="Share ${sound.name}">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="font-size: 1.3rem; color: cornflowerblue;">
                      <circle cx="18" cy="5" r="3"/>
                      <circle cx="6" cy="12" r="3"/>
                      <circle cx="18" cy="19" r="3"/>
                      <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/>
                      <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/>
                    </svg>
                  </button>
                  <a href="${audioUrl}" download="${sound.name}.mp3" class="instant-action-button download-btn" title="Download ${sound.name}">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="font-size: 1.3rem; color: #2ECC71;">
                      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                      <polyline points="7 10 12 15 17 10"/>
                      <line x1="12" y1="15" x2="12" y2="3"/>
                    </svg>
                  </a>
                </div>
              </div>
            `;
            soundsGrid.appendChild(soundItem);
          });
          
          // Check if there are more pages
          if (!data.data.next) {
            loadMoreBtn.style.display = 'none';
          }
          
          // Scroll to first new item
          const newItems = soundsGrid.querySelectorAll('.sound-item');
          if (newItems[currentItemCount]) {
            newItems[currentItemCount].scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        } else {
          // No more sounds
          loadMoreBtn.style.display = 'none';
        }
      } catch (error) {
        console.error('Error loading more sounds:', error);
        loadMoreBtn.innerHTML = originalText;
      } finally {
        isLoading = false;
        loadMoreBtn.disabled = false;
        if (loadMoreBtn.style.display !== 'none') {
          loadMoreBtn.innerHTML = originalText;
        }
      }
    }
    
    loadMoreBtn.addEventListener('click', loadMoreSounds);
  })();
</script>

<style>
  /* Breadcrumbs */
  .breadcrumbs {
    margin-bottom: 1.5rem;
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.9rem;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
  }

  .breadcrumb-item:not(:last-child)::after {
    content: '/';
    margin-left: 0.5rem;
    color: var(--text-secondary);
  }

  .breadcrumb-item a {
    color: var(--primary-color);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumb-item a:hover {
    color: #2980b9;
    text-decoration: underline;
  }

  .breadcrumb-active {
    color: var(--text-primary);
  }

  /* Hero Section */
  .hero-section {
    text-align: center;
    margin: 3rem 0 2rem;
  }

  .main-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--text-primary);
    line-height: 1.2;
  }

  .main-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Introduction Text */
  .intro-text {
    text-align: center;
    margin: 2rem 0 3rem;
  }

  .intro-text p {
    font-size: 1rem;
    color: var(--text-secondary);
    max-width: 900px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Section Header */
  .section-header {
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-title {
      font-size: 1.75rem;
    }

    .main-description {
      font-size: 1rem;
    }

    .breadcrumb-list {
      font-size: 0.85rem;
    }
  }
</style>


