  }

  /* Error Section */
  .error-section {
    text-align: center;
    padding: 4rem 2rem;
  }

  .error-section h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .error-section p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .cta-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: var(--primary-color);
    color: var(--white);
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  .cta-button:hover {
    background-color: #2980b9;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-title {
      font-size: 1.75rem;
    }

    .main-description {
      font-size: 1rem;
    }

    .breadcrumb-list {
      font-size: 0.85rem;
    }
  }
</style>

